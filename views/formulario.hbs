<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color:blue;">Ingresar Producto</h1>
        <br>

        <form action="/datos" method="post">
            
            <div class="form-group">
                <label for="nombre"><b>Nombre</b></label>
                <input id="nombre" class="form-control" type="text" name="nombre">
            </div>

            <div class="form-group">
                <label for="apellido"><b>Descripción</b></label>
                <input id="descripción" class="form-control" type="text" name="descripción">
            </div>            

            <div class="form-group">
                <label for="edad"><b>Edad</b></label>
                <input id="edad" class="form-control" type="number" name="edad">
            </div>

            <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
        {{> tabla }}
    </div>
</div>


