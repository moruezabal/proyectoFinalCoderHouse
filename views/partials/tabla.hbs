<h2 style="color:crimson;">Historial</h2>
{{#if productos.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;" class="text-center"> 
                <th>Nombre</th>
                <th>Descripción</th> 
                <th>Precio</th>
                <th>Código</th>
                <th>Foto</th>
                <th>Stock</th> 
                <th>Publicado</th> 
            </tr>
            {{#each productos}}
            <tr class="text-center">
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{price}}</td>
                <td>{{code}}</td>
                <td>{{thumbnail}}</td>
                <td>{{stock}}</td>
                <td>{{timestamp}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-danger">no se encontraron datos</h1>
{{/if}}
